<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/window_spacing_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            android:lines="1"
            android:ellipsize="end"
            style="?attr/textAppearanceBodyLarge"
            tools:text="Notdünger"
            android:paddingTop="12dp"
            android:paddingHorizontal="@dimen/window_spacing_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />
        <com.google.android.material.textview.MaterialTextView
            style="?attr/textAppearanceBodySmall"

            android:id="@+id/tv_game_name"
            android:lines="1"
            android:ellipsize="end"
            tools:text="Pokémon Blattgrün"
            android:paddingHorizontal="@dimen/window_spacing_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            style="?attr/textAppearanceBodyMedium"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="3"
            android:paddingHorizontal="@dimen/window_spacing_horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"
            tools:text="Pikachu speichert Elektrizität in seinen Wangen. Wenn es überrascht oder verärgert ist, kann es diese Elektrizität als Blitzentladung abgeben. Es nutzt diese Fähigkeit, um sich gegen Feinde zu verteidigen oder um elektrische Geräte aufzuladen." />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
