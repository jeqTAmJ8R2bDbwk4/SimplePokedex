<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    android:id="@+id/linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    app:justifyContent="space_evenly"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:background="@drawable/evolution_background_placeholder"
            android:layout_gravity="center_horizontal"
            android:layout_width="84dp"
            android:layout_height="84dp" />

        <com.google.android.material.textview.MaterialTextView
            style="?attr/textAppearanceBodyLarge"
            android:background="@drawable/text_view_placeholder"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:layout_width="84dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        app:layout_alignSelf="center"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_right_alt_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="?attr/colorSurfaceContainerHighest" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:background="@drawable/evolution_background_placeholder"
            android:id="@+id/iv_evolution"
            android:layout_gravity="center_horizontal"
            android:layout_width="84dp"
            android:layout_height="84dp"/>
        <com.google.android.material.textview.MaterialTextView
            style="?attr/textAppearanceBodyLarge"
            android:background="@drawable/text_view_placeholder"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_evolution"
            android:layout_width="84dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.google.android.flexbox.FlexboxLayout>